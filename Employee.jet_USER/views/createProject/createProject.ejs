<link rel="stylesheet" href="/css/createProject/createProject.css">
<div class="createProject-container">
    <form class="createProject-form" action="/createProject/newProject" method="post">
        <!-- 2 column grid layout with text inputs for the first and last names -->
        <div class="row mb-4">
            <div class="col">
                <div class="form-outline">
                    <input type="text" id="form6Example1" class="form-control" name="name">
                    <label class="form-label" for="form6Example1">Project Name</label>
                </div>
            </div>
        </div>

        <div class="form-outline mb-4">
            <input type="text" id="form6Example4" class="form-control" >
            <label class="form-label" for="form6Example4">Department</label>
        </div>

        <!-- Text input -->
        <div class="form-outline mb-4">
            <input type="text" id="form6Example4" class="form-control" name="skills">
            <label class="form-label" for="form6Example4">Skills Required</label>
        </div>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="date" id="form6Example5" class="form-control" name="deadline">
            <label class="form-label" for="form6Example5">Expexted Deadline</label>
        </div>

        <!-- Number input -->
        <div class="form-outline mb-4">
            <input type="number" id="form6Example6" class="form-control" >
            <label class="form-label" for="form6Example6">Expected Team Size</label>
        </div>

        <!-- Message input -->
        <div class="form-outline mb-4">
            <textarea class="form-control" id="form6Example7" rows="4" name="description"></textarea>
            <label class="form-label" for="form6Example7">Project Description</label>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Create Project</button>
    </form>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.3.0/mdb.min.js"></script>
